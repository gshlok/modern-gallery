# Gallery Platform Specific Settings

# Media Storage
MEDIA_DISK=public
MEDIA_MAX_SIZE=10240
MEDIA_ALLOWED_MIMES=jpeg,jpg,png,gif,webp,svg
MEDIA_THUMBNAIL_SIZES=150,300,600,1200
MEDIA_QUALITY=85

# AI Generation (Optional)
AI_GENERATION_ENABLED=true
AI_DEFAULT_PROVIDER=mock
AI_DEFAULT_MODEL=mock-model-v1

# OpenAI (if using real AI)
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_ENABLED=false
OPENAI_MODERATION_ENABLED=false

# Stability AI (if using real AI)
STABILITY_API_KEY=
STABILITY_HOST=https://api.stability.ai
STABILITY_ENABLED=false

# Midjourney (if using real AI)
MIDJOURNEY_API_KEY=
MIDJOURNEY_WEBHOOK_URL=
MIDJOURNEY_ENABLED=false

# Vector Search (Optional)
VECTOR_PROVIDER=mock
VECTOR_LOG_SEARCHES=false

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Security
SECURITY_RATE_LIMITING=true
SECURITY_ENCRYPT_PROMPTS=false
SECURITY_AUDIT_GENERATIONS=true

# Performance
CACHE_TTL=3600
SEARCH_CACHE_TTL=300
VECTOR_CACHE_TTL=86400